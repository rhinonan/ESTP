extends ../layout

block content
  .row
    .col-lg-12
      h1.page-header
        | 创业话题管理
      ol.breadcrumb
        li
          i.fa.fa-dashboard
          span &emsp;
          a(href='index.html') ESPT 管理系统
        li.active
          i.fa.fa-table
          |  修改创业话题
  .row
    .col-md-12
      form.form-horizontal(action="../../../api/topic" method="POST")
        .form-group
          label.col-sm-2.control-label(for='title') 话题标题
          .col-sm-4
            input#title.form-control(type='text',value="#{topic.title}",name="title", placeholder='话题标题')
        .form-group
          label.col-sm-2.control-label(for='detail') 话题详情
          .col-sm-4
            textarea#detail.form-control(type='text',name="detail",placeholder='话题详情',rows="10") #{topic.detail},
        .form-group
          label.col-sm-2.control-label(for='userId') 发布的用户
          .col-sm-4
            select#userId.form-control(name="userId")
              option(value="#{topic.userId}") 请重新选择
              each user in users
                option(value="#{user._id}") #{user.user}

        .form-group
          label.col-sm-2.control-label(for='tag') 话题标签
          .col-sm-4
            input#tag.form-control(type='text',value="#{topic.tag}",name="tag", placeholder='话题标签')
        .form-group(style="display:none")
          .col-sm-4
            input#type.form-control(type='text',name="type",value="update")
          .col-sm-4(style="display:none")
            input#type.form-control(type='text',name="from",value="admin")
          .col-sm-4(style="display:none")
            input#type.form-control(type='text',name="topicId",value="#{topic._id}")
        .form-group
          .col-sm-offset-2.col-sm-6
            button.btn.btn-default(type='submit') 提交